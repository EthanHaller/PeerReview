{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "types": ["node"]
    },
    "include": [
      "netlify/functions/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  